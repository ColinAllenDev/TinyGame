    "version": "0.2.0",
    "configurations": 
    [
      {
        "name": "Launch Project",
        "type": "cppdbg",
        "request": "launch",
        // Change to godot.linuxbsd.tools.64.llvm for llvm-based builds.
        "program": "/home/colin/Applications/godot/bin/godot.linuxbsd.editor.x86_64.mono",
        // Change the arguments below for the project you want to test with.
        // To run the project instead of editing it, remove the "--editor" argument.
        "args": ["--editor", "--path", "/home/colin/Projects/Godot/TinyGame/game" ],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "setupCommands":
        [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      {
         "name": "Launch Project (No Editor)",
         "type": "cppdbg",
          "request": "launch",
          // Change to godot.linuxbsd.tools.64.llvm for llvm-based builds.
          "program": "/home/colin/Applications/godot/bin/godot.linuxbsd.editor.x86_64.mono",
          // Change the arguments below for the project you want to test with.
          // To run the project instead of editing it, remove the "--editor" argument.
          "args": ["--path", "/home/colin/Projects/Godot/TinyGame/game" ],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "setupCommands":
          [
            {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
            }
          ],
          "preLaunchTask": "build",
          "miDebuggerPath": "/usr/bin/gdb"
      }
    ]
}